BoxLayout:
    orientation: "vertical"
    BoxLayout:
        orientation: "horizontal"
        TextInput:
            id: miles_input
            font_size: 48
            on_text: app.handle_conversion(self.text)
        BoxLayout:
            orientation: "vertical"
            size_hint_x: 0.2
            Button:
                text: "Up"
                on_press: app.handle_increment(miles_input.text, 1)
            Button:
                text: "Down"
                on_press: app.handle_increment(miles_input.text, -1)
#    Button:
#        text: "Convert miles to km"
#        font_size: 20
#        on_press: app.handle_conversion(int(miles_input.text))
    Label:
        id: output_label
        text: app.km_output
        font_size: 48
        color: (1, 1, 0, 1)
